  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.poem-item .poem-title {
  color: #333;
  font-size: 14px;
}

.poem-item .poem-author {
  color: #888;
  font-size: 12px;
  /* padding: 5px 0; */
  display: inline-block;
  /* float: right; */
  text-align: right;
}

.poem-item .poem-content {
  font-size: 14px;
  color: #454545;
}

