.container {
  padding: 0 0 0 0;
}

.page__bd {
  padding-bottom: 0;
}

.user-header {
  display: flex;
  width: 100%;
  padding: 10px 0;
  justify-content: center;
  background-color: #337ab7;
}

.userinfo {
  display: flex;
  align-items: center;
  width: 80%;
  margin-bottom: 15px;
}

.userinfo .login-btn {
  margin-top: 30px;
  margin-bottom: 30px;
}

.userinfo-avatar-view {
  /* width: 130px; */
  text-align: right;
}

.userinfo-avatar {
  display: block;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  overflow: hidden;
}

.userinfo-nickname {
  color: #fff;
}

.page.list {
  width: 100%;
}

.page.list {
  width: 100%;
  background-color: inherit;
  padding-top: 0;
}

.home-content {
  padding: 0;
}

.navigator-hover {
  background-color: #fff;
  color: #337ab7;
}

.weui-cells {
  font-size: 14px;
  color: #666;
}

.weui-cell {
  padding: 10px 15px;
}

.list weui-cell_access {
  font-size: 12px;
}

.poem-item {
  display: block;
}

.poem-item view {
  /* width:100%; */
